<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RulesFragment"
    android:background="@color/light_purple"
    >


    <TextView
        android:id="@+id/header_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velkommen til lykkehjulet"
        android:textSize="35sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regler"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_welcome"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/rules_text1"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spillet kan spilles af en spiller afgangen"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/rules_text2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spilleren starter med 5 liv."
        app:layout_constraintTop_toBottomOf="@+id/rules_text1"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rules_text3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tryk på spin for at dreje hjullet."
        app:layout_constraintTop_toBottomOf="@+id/rules_text2"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/rules_text4"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lander du på et point felt kan du gætte en på en konsonant, gætter du rigtigt får du tilsvarende point til din pointbeholdning. "
        app:layout_constraintTop_toBottomOf="@+id/rules_text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rules_text5"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Du kan under hele spillet hvis du har nok points købe en vokalved at trykke på knappen køb vokal. "
        app:layout_constraintTop_toBottomOf="@+id/rules_text4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rules_text6"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Gætter du forkert på enten en konsonant eller en vokal mister du et liv."
        app:layout_constraintTop_toBottomOf="@+id/rules_text5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rules_text7"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Du kan under hele spillet vælge at gætte på ordet, gætter du forkert mister du alle dine liv og spillet slutter."
        app:layout_constraintTop_toBottomOf="@+id/rules_text6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/rules_text8"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Du kan under hele spillet vælge at gætte på ordet, gætter du forkert mister du alle dine liv og spillet slutter."
        app:layout_constraintTop_toBottomOf="@+id/rules_text7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/rules_text9"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lander du på feltet Mistet liv fjernes et liv fra din livsbeholdning. "
        app:layout_constraintTop_toBottomOf="@+id/rules_text8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/rules_text10"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lander du på feltet Bankerot mister du alle dine liv og spillet slutter. "
        app:layout_constraintTop_toBottomOf="@+id/rules_text9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/rules_text11"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lander du på feltet Ekstra liv, tildeles du et ekstra liv til din livsbeholdning."
        app:layout_constraintTop_toBottomOf="@+id/rules_text10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/rules_text12"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Spillet vindes når det sidste bogstav er gættet eller der gættes rigtigt på hele ordet."
        app:layout_constraintTop_toBottomOf="@+id/rules_text11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        />


    <Button
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start spil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rules_text12"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        />

</androidx.constraintlayout.widget.ConstraintLayout>