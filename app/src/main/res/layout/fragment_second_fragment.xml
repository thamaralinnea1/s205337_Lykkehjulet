<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameFragment"
    android:background="@color/light_purple">


    <ImageView
        android:id="@+id/hjul"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/hjul1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />

    <ImageView
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:src="@drawable/spin1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/testTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/get_ord"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/get_ord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hjul"
        android:backgroundTint="@color/orange"
        android:textStyle="bold"
        android:textSize="20sp"
        />



    <Button
        android:id="@+id/kob_vokal"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/hjul"
        android:text="@string/kob_vokal_500_point"
        android:backgroundTint="@color/orange"

        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lives_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_5"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/life"
        app:layout_constraintBottom_toBottomOf="@+id/life"
        app:layout_constraintStart_toEndOf="@+id/life"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/lives_left"
        app:layout_constraintBottom_toBottomOf="@+id/lives_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp"
        />

    <TextView
        android:id="@+id/guessing_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="123dp"
        android:text="@string/ord_til_at_g_tte"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/testTxt"
        app:layout_constraintBottom_toTopOf="@id/hjul"
         />
    <EditText
        android:id="@+id/guess"
        android:layout_height="40dp"
        android:layout_width="50dp"
        app:layout_constraintTop_toBottomOf="@+id/guessing_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
